weekday=int(input("enter any weekday number(1-7):"))
if(weekday==1):
print("\n monday")
elif(weekday==2):
print("\n tuesday")
elif(weekday==3):
print("\n wednesday")
elif(weekday==4):
print("\n thirsday")
elif(weekday==5):
print("\n friday")
elif(weekday==6):
print("\n saturday")
elif(weekday==7):
print("\n sunday")
else:
print("\please enter weekday number 1-7")
